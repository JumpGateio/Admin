{
    "name":        "jumpgate/core",
    "description": "A core set of features for laravel sites.",
    "license":     "MIT",
    "authors":     [
        {
            "name":  "Stygian",
            "email": "stygian.warlock.v2@gmail.com"
        },
        {
            "name":  "Riddles",
            "email": "riddles@dev-toolbox.com"
        }
    ],
    "require": {
        "laravel/framework": "^5.0",
        "jumpgate/database": "*@dev",
        "laracasts/utilities": "~2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
        "orchestra/testbench": "~3.4"
    },
    "suggest": {
        "jumpgate/menu": "Full featured menu system.",
        "jumpgate/database": "Database helpers and collection additions.",
        "jumpgate/view-resolution": "Automatic view resolution.",
        "jumpgate/users": "A complete user solution."
    },
    "autoload":    {
        "files": [
            "src/helper/base.php",
            "src/helper/math.php",
            "src/helper/route.php",
            "src/helper/time.php"
        ],
        "psr-4":    {
            "JumpGate\\Core\\": "src/JumpGate/Core"
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "path",
            "url": "../Database"
        }
    ]
}
